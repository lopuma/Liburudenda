<div class="grid-container">
    <div class="container p-4">
        <div class="row">
            {{#each books}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{id_book}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{titulo}}
                            </h3>
                        </a>
                        <p class="m-2">{{isbn}}</p>
                        <p class="text-muted">
                            {{autor}}
                        </p>
                        <a class="btn btn-danger" href="/dashboard/delete/{{id_book}}">
                            Delete Link
                        </a>
                        <a class="btn btn-secondary" href="/lidashboardnks/edit/{{id_book}}">
                            Edit
                        </a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are not dashboard saved yet.</p>
                    <a href="/dashboard/add">Create One!</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
